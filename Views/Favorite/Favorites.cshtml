@model List<Follower>

@section ExtraStyles {
	<link href="~/styles/favorites.css" rel="stylesheet" />
}

<header>
	<h1>Favoris</h1>
</header>
<h2 style="text-align: center;">Vous avez @Model.Count favoris.</h2>

<section id="cardsWrapper">
	@if (Model.Count == 0)
	{
		<div class="noFavorites">
			<h3>Vous n'avez aucun favori.</h3>
			<img src="~/images/shared/ui/defaultartwork.webp" />
		</div>
	}
	@foreach (Follower follower in Model)
	{
		<form asp-action="Delete">
			<partial name="_FollowerCardPartial" model="follower" />
			<input type="hidden" name="Id" value="@follower.Id" />
		</form>
	}
</section>
