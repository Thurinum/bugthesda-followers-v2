@model Follower;

<!-- DETAILS D'UN COMPAGNION-->
<article id="followerInfoWrapper">
	<!-- IMAGE DU COMPAGNION -->
	<figure id="portrait">
		<img src="@Follower.GetPictureSrc(Model)"
		     alt="Image du compagnion @Model.Name" />
		<figcaption>
			<img class="gameLogo" src="~/images/games/@(Model.Parent.ShortName)/logo.png" alt="Logo du jeu" />
			<span>@Model.Name</span>
			@if (Model.IsFavorite)
			{
				<img class="favoriteToggle link" src="~/images/shared/ui/favorite.png" alt="Enlever @Model.Name aux favoris" onclick="$('removeFromFavs').submit()" />
			}
			else
			{
				<img class="favoriteToggle link" src="~/images/shared/ui/favorite_hollow.png" data-href="/favorites/add/@(Model.Id)" alt="Ajouter @Model.Name des favoris" onclick="$('addToFavs').submit()" />
			}
		</figcaption>
		<img class="deleteFavorite link" data-href="/@Model.Id/delete" />
	</figure>

	<form id="addToFavs" asp-controller="Favorite" asp-action="Add">
		<input name="Id" asp-for="Id" type="hidden" value="@(Model.Id)" />
	</form>
	<form id="removeFromFavs" asp-controller="Favorite" asp-action="Remove">
		<input asp-for="Id" type="hidden" value="@(Model.Id)" />
	</form>

	<!-- ATTRIBUTS -->
	<section id="attributes">
		@if (Model.IsFavorite)
		{
			<img class="link" src="~/images/shared/attributes/favorite_edit.png" data-href="/favorites/remove/@(Model.Id)" alt="Est Favori" />
		}
		@if (Model.Protection == Follower.ProtectionLevel.Essential)
		{
			<img src="~/images/shared/attributes/essential.png" alt="Est Essentiel" />
		}
		else if (Model.Protection == Follower.ProtectionLevel.Protected)
		{
			<img src="~/images/shared/attributes/respawns.png" alt="Resurrecte" />
		}
	</section>

	<!-- RACE ET CLASSE -->
	<section id="raceclass">
		<div class="raceclassCard">
			@*<img src="~/images/shared/races/@(Model.Race.ShortName).webp" />*@
			<img src="~/images/shared/ui/throbber.png" />
			<h2>@Model.Race.NativeName</h2>
			<p>@Model.Race.Description</p>
		</div>
		<div class="raceclassCard">
			@*<img src="~/images/shared/classes/@(Model.Class.ShortName).webp" />*@
			<img src="~/images/shared/ui/throbber.png" />
			<h2>@Model.Class.Name</h2>
			<p>@Model.Class.Description</p>
		</div>
	</section>

	<!-- HABILETES -->
	<section id="abilities">
		<header>Abilities</header>
		<div class="scrollWrapper">
			@foreach (Ability ability in Model.Abilities)
			{
				<div class="abilityCard">
					@*<img src="~/images/shared/abilities/@(datum.ShortName).webp" />*@
					<img src="~/images/shared/ui/throbber.png" />
					<h4>@ability.Name</h4>
					<p>@ability.Description</p>
				</div>
			}
		</div>
	</section>

	<!-- DESCRIPTION ET CONTEXTE -->
	<article id="description">
		<p>@Model.Description</p>
		<footer><strong>Condition:</strong>&nbsp;@Model.UnlockContext</footer>
	</article>
</article>

