{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "./wwwroot/scripts/js",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true
  },
  "include": [
    "./wwwroot/scripts/ts/**/*"
  ]
}